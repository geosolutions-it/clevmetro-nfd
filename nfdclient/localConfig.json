    "themePrefix": "nfdclient",
    "translationsPath": "/static/assets/translations",
	  "plugins": {
        "desktop": [{
            "name": "Map",
            "cfg": {
                "mapType": "leaflet",
                "tools": ["measurement", "draw"]
            }
        }, {
            "name": "Tutorial",
            "cfg": { 
              "toolsCfg": [
                { "rawSteps": [
                    {
                        "title": "Welcome to the natural features database of the Cleveland metroparks",
                        "text": "Click on start to initialize the tutorial",
                        "selector": "#first-step-tutorial"
                    },
                    {
                        "title": "Layer tree",
                        "text": "<div><ol><li>Click on the logo button to open the layer tree</li><li>Here the user can manage the layers</li></ol></div>",
                        "selector": "#drawer-menu-button"
                    },
                    {
                        "title": "Background layers",
                        "text": "<div>Click on the map miniature to switch between background layers</div>",
                        "selector": ".background-plugin-position"
                    },
                    {
                        "title": "Legend",
                        "text": "<div>Displays the legend of the layers</div>",
                        "selector": "#nfd-legend"
                    },
                    {
                        "title": "Search categories",
                        "text": "<div>Search and filter nfd categories</div>",
                        "selector": "#features-button"
                    },
                    {
                        "title": "Add new observation",
                        "text": "<div><ol><li>When the user has logged in as an admin, the add icon is activated</li><li>Select a feature type from the drop-down menu</li><li>Click on the map to add the marker in the desired location</li><li>The edit panel opens</li><li>Click on the input field to edit and type to add new informations</li><li>Click on a different tab to add more informations</li><li>Click on save button to finish the edit and save</li></ol></div>",
                        "selector": "#addnf-menu-button"
                    },
                    {
                        "title": "Toggle feature panel",
                        "text": "<div>Enable a user to toggle the feature panel</div>",
                        "selector": "#add-edit-button"
                    },
                    {
                        "title": "Reports",
                        "text": "<div>Enable a logged user to download category statistical report</div>",
                        "selector": "#pdf-menu-button"
                    },
                    {
                        "title": "Login/out",
                        "text": "<div>It shows user info and login/out button</div>",
                        "selector": "#loginButton"
                    },
                    {
                        "title": "Visualization",
                        "text": "<div><ol><li>Click on the marker to get information.</li><li>The panel opens</li><li>Select the tab to see the contents</li><li>When the user has logged in as an admin, he/she can edit existing observation, click on the marker.</li><li>Click and type to change the attributes on any field</li><li>Click on update button to finish the edit and save, or click on delete button to remove the observation</li><li>Click on the X button to close the panel</li></ol></div>",
                        "selector": "#map"
                    },
                    {
                        "title": "Zoom In",
                        "text": "<div>Click to enlarge the map</div>",
                        "selector": "#zoomin-btn"
                    },{
                        "title": "Zoom Out",
                        "text": "<div>Click to reduce the map</div>",
                        "selector": "#zoomout-btn"
                    },{
                        "title": "Full Screen",
                        "text": "<div>Click to go full screen</div>",
                        "selector": "#mapstore-zoomtomaxextent"
                    }
                    
                ]}
              ]
            }
        },
        {
            "name": "BackgroundSelector",
            "cfg": {
                "bottom": 200
            }
        },
        "OmniBar",
        "NfdLogin",
        "Toolbar",
        "Expander",
        "ZoomAll",
        "ZoomIn",
        "ZoomOut",
        "ViewEditNaturalFeatures",
