        "url": "/mapstore/proxy/?url=",
        "useCORS": ["http://localhost", "http://localhost:8081", "http://192.168.1.38", "http://192.168.1.38:8081", "http://geosolutions.scolab.eu", "https://geosolutions.scolab.eu", "http://dev.nfd.geo-solutions.it", "https://dev.nfd.geo-solutions.it"]
    },
	  "geoStoreUrl": "/mapstore/rest/geostore",
